option(ENABLE_SHARED "Build shared libraries" ON)
if (DEFINED TOP_NAMESPACE)
    set(TOP_NAMESPACE ${TOP_NAMESPACE} CACHE STRING "Top level namespace")
else()
    set(TOP_NAMESPACE "simpleRt" CACHE STRING "Top level namespace")
